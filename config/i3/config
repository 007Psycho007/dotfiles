# shutdown / restart / suspend...
set $mode_system System: (l)  / (r) ﰇ / (Ctrl+s) 襤

mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym s exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

bindsym $mod+x exec $HOME/.config/scripts/lock/lock

set $mode_display : (1)  / (2)  / (3)  

mode "$mode_display" {
    bindsym 1 exec --no-startup-id $HOME/.screenlayout/home.sh ; mode "default"
    bindsym 2 exec --no-startup-id $HOME/.screenlayout/work.sh ; mode "default"
    bindsym 3 exec --no-startup-id $HOME/.screenlayout/start.sh ; mode "default"
    bindsym 5 exec --no-startup-id $HOME/.screenlayout/third.sh ; mode "default"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

